import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.Material;
import org.bukkit.Particle;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerCommandPreprocessEvent;
import org.bukkit.event.player.PlayerDeathEvent;
import org.bukkit.potion.PotionEffect;
import org.bukkit.potion.PotionEffectType;
import org.bukkit.plugin.java.JavaPlugin;

public class NoCommandRegisterPlugin extends JavaPlugin implements Listener {

    @Override
    public void onEnable() {
        // 注册监听器
        getServer().getPluginManager().registerEvents(this, this);
    }

    // 处理/mmxq help 和 /mmxq crime
    @EventHandler
    public void onCommandPreprocess(PlayerCommandPreprocessEvent event) {
        if (event.getMessage().startsWith("/mmxq")) {
            Player player = event.getPlayer();
            String[] commandParts = event.getMessage().split(" ");
            if (commandParts.length > 0) {
                String command = commandParts[0];
                if (command.equalsIgnoreCase("/mmxq help")) {
                    player.sendMessage(ChatColor.GREEN + "这是一个帮助信息，mmxq插件的使用指南。");
                    event.setCancelled(true); // 取消原生命令的执行
                } else if (command.equalsIgnoreCase("/mmxq crime")) {
                    PotionEffect redstoneGlow = new PotionEffect(PotionEffectType.GLOWING, 3 * 60 * 20, 0);
                    player.addPotionEffect(redstoneGlow);
                    event.setCancelled(true); // 取消原生命令的执行
                }
            }
        }
    }

    // 当玩家被击杀时，自动执行/mmxq crime
    @EventHandler
    public void onPlayerDeath(PlayerDeathEvent event) {
        // 确保玩家是被另一个玩家杀死的
        Player victim = event.getEntity();
        if (victim.getLastDamageCause() instanceof org.bukkit.event.entity.EntityDamageByEntityEvent) {
            org.bukkit.event.entity.EntityDamageByEntityEvent lastDamage = (org.bukkit.event.entity.EntityDamageByEntityEvent) victim.getLastDamageCause();
            if (lastDamage.getDamager() instanceof Player) {
                Player killer = (Player) lastDamage.getDamager();
                // 执行/mmxq crime
                PotionEffect redstoneGlow = new PotionEffect(PotionEffectType.GLOWING, 3 * 60 * 20, 0);
                killer.addPotionEffect(redstoneGlow);
            }
        }
    }
}