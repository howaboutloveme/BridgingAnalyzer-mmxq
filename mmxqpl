import org.bukkit.Bukkit;
import org.bukkit.Particle;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerJoinEvent;
import org.bukkit.plugin.java.JavaPlugin;
import org.bukkit.potion.PotionEffect;
import org.bukkit.potion.PotionEffectType;

public class GlowEffectPlugin extends JavaPlugin implements Listener {

    private static final PotionEffectType GLOWING = PotionEffectType.getByName("GLOWING");
    private static final int POTION_AMPLIFIER = 0; // 无放大效果
    private static final int POTION_DURATION = 20 * 60 * 10; // 10分钟，转换为tick

    @Override
    public void onEnable() {
        // 插件启用时的逻辑
        Bukkit.getPluginManager().registerEvents(this, this); // 注册事件监听器
    }

    @Override
    public void onDisable() {
        // 插件禁用时的逻辑
    }

    @EventHandler
    public void onPlayerJoin(PlayerJoinEvent event) {
        Player player = event.getPlayer();
        // 给玩家添加发光效果
        player.addPotionEffect(new PotionEffect(GLOWING, POTION_DURATION, POTION_AMPLIFIER, false, false, false));
    }
}
